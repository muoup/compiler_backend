define fn i32 main()
    %arr = alloca i32 32
    %ptr = getarrayptr i32 ptr %arr, 4
    store i32 5, %ptr
end

define fn void fill_array(ptr %arr)
    %1 = getarrayptr i32 ptr %arr, 1
    store i32 %1, 2

    %2 = getarrayptr i32 ptr %arr, 2
    store i32 %2, 4

    %3 = getarrayptr i32 ptr %arr, 3
    store i32 %3, 6
end